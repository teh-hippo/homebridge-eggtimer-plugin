{
  "name": "homebridge-eggtimer-plugin",
  "version": "1.0.5",
  "description": "Egg Timers for Homebridge: https://github.com/nfarina/homebridge",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin",
    "egg-timer",
    "eggtimer",
    "timer",
    "countdown",
    "delay",
    "automation",
    "homebridge"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/teh-hippo/homebridge-eggtimer-plugin.git"
  },
  "bugs": {
    "url": "http://github.com/teh-hippo/homebridge-eggtimer-plugin/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/teh-hippo"
  },
  "engines": {
    "node": ">=16.0.0",
    "homebridge": ">=0.2.0"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "xo": "^0.54.2",
    "yargs-parser": "^21.1.1",
    "minimist": "^1.2.8"
  },
  "scripts": {
    "test": "xo"
  },
  "xo": {
    "space": false,
    "rules": {
      "camelcase": "off",
      "no-mixed-spaces-and-tabs": "warn",
      "no-useless-escape": "warn",
      "indent": "off",
      "quotes": "warn",
      "capitalized-comments": "off",
      "no-var": "warn",
      "prefer-destructuring": "off",
      "prefer-arrow-callback": "warn",
      "object-shorthand": [
        "off",
        "always",
        {
          "ignoreConstructors": true
        }
      ],
      "quote-props": "error",
      "no-unused-vars": "warn",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "unicorn/prefer-ternary": "off",
      "unicorn/prefer-switch": "warn",
      "promise/prefer-await-to-then": "off",
      "unicorn/prefer-module": "off",
      "unicorn/expiring-todo-comments": "off"
    }
  }
}
